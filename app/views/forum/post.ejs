<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slink | <%= post.title %></title>
    <link rel="icon" href="/images/slink-logo.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
    <style>
        html, body {
            overflow: scroll;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            display: none;
        }
        .dot-pattern {
            background-image: radial-gradient(rgba(96, 34, 52, 0.5) 1px, transparent 1px);
            background-size: 20px 20px;
            background-color: #ffffff;
        }
        @keyframes gradient-flow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .gradient-text {
            background: linear-gradient(45deg, #602234, #602234);
            background-size: 200% 200%;
            animation: gradient-flow 3s ease-in-out infinite;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1.2;
        }
        .animate-spin-slow {
            animation: spin-slow 8s linear infinite;
        }
        @keyframes spin-slow {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        .tag-card {
            background-color: #602234;
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            display: inline-flex;
            align-items: center;
            margin: 0.25rem;
            transition: all 0.2s ease;
        }
        .tag-card:hover {
            transform: scale(1.05);
            background-color: #4a1a28;
        }
        .comment-card {
            transition: all 0.3s ease;
        }
        .comment-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 6px -1px rgba(96, 34, 52, 0.1), 0 2px 4px -1px rgba(96, 34, 52, 0.06);
        }
    </style>
</head>
<body class="dot-pattern min-h-screen">
    <div id="navbar-container"></div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8 mt-20">
        <div class="max-w-4xl mx-auto">
            <!-- Post Content -->
            <div class="bg-white rounded-xl p-6 shadow-lg mb-6">
                <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                        <h1 class="text-3xl sm:text-3xl font-bold text-[#602234] mb-4"><%= post.title %></h1>
                        <div class="flex items-center">
                            <div class="w-10 h-10 rounded-full bg-[#602234] mr-3 flex items-center justify-center">
                                <i class="fas fa-user text-white text-xl"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-800"><%= post.author %></h3>
                                <p class="text-sm text-gray-500"><%= new Date(post.createdAt).toISOString().split('T')[0] %></p>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4">
                        <button id="upvoteBtn" class="text-[#602234] hover:text-[#4a1a28] transition-colors duration-300">
                            <i class="fas fa-arrow-up"></i>
                            <span class="text-sm" id="upvoteCount"><%= post.upvotes.length %></span>
                        </button>
                        <button id="downvoteBtn" class="text-[#602234] hover:text-[#4a1a28] transition-colors duration-300">
                            <i class="fas fa-arrow-down"></i>
                            <span class="text-sm" id="downvoteCount"><%= post.downvotes.length %></span>
                        </button>
                    </div>
                </div>
                
                <div class="prose max-w-none mb-6">
                    <%- post.content %>
                </div>

                <div class="border-t border-gray-200 pt-4 mb-6">
                    <h3 class="text-lg font-semibold text-[#602234] mb-4">Tags</h3>
                    <div class="flex flex-wrap gap-2">
                        <% post.tags.forEach(tag => { %>
                            <span class="tag-card text-base px-4 py-2"><%= tag.trim() %></span>
                        <% }); %>
                    </div>
                </div>

                <div class="border-t border-gray-200 pt-4">
                    <!-- Comment Form -->
                    <form id="commentForm" action="/post/<%= post._id %>/comment" method="POST" class="mb-6">
                        <div class="flex flex-col space-y-4">
                            <div class="mb-2 flex space-x-2">
                                <button type="button" class="wysiwyg-btn bg-gray-200 text-gray-700 px-3 py-1 rounded hover:bg-gray-300 transition-colors">
                                    <i class="fas fa-bold"></i>
                                </button>
                                <button type="button" class="wysiwyg-btn bg-gray-200 text-gray-700 px-3 py-1 rounded hover:bg-gray-300 transition-colors">
                                    <i class="fas fa-italic"></i>
                                </button>
                                <button type="button" class="wysiwyg-btn bg-gray-200 text-gray-700 px-3 py-1 rounded hover:bg-gray-300 transition-colors">
                                    <i class="fas fa-underline"></i>
                                </button>
                            </div>
                            <textarea name="content" rows="2" required
                                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-[#602234] focus:ring-2 focus:ring-[#602234]/20 focus:bg-gray-50 transition-all duration-300 resize-none"
                                placeholder="Write a comment..."></textarea>
                            <button type="submit"
                                class="w-full bg-[#602234] text-white px-8 py-3 rounded-lg font-semibold text-lg transition-all duration-300 transform hover:scale-[1.02] hover:bg-[#4a1a28]">
                                <i class="fas fa-upload mr-2"></i>
                                Post Comment
                            </button>
                        </div>
                    </form>

                    <!-- Comments Section Header -->
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-semibold text-[#602234]">Comments (<%= post.comments.length %>)</h3>
                        <button class="toggle-comments text-[#602234] hover:text-[#4a1a28] transition-colors">
                            <i class="fas fa-chevron-up text-xl"></i>
                        </button>
                    </div>

                    <!-- Comments List -->
                    <div class="comments-content space-y-4">
                        <% post.comments.forEach(comment => { %>
                            <div class="comment-card bg-gray-50 rounded-lg p-4 border border-gray-300">
                                <div class="flex items-center mb-2">
                                    <div class="w-8 h-8 rounded-full bg-[#602234] mr-2 flex items-center justify-center">
                                        <i class="fas fa-user text-white text-sm"></i>
                                    </div>
                                    <div>
                                        <h4 class="font-semibold text-gray-800"><%= comment.author %></h4>
                                        <p class="text-sm text-gray-500"><%= new Date(comment.createdAt).toISOString().split('T')[0] %></p>
                                    </div>
                                </div>
                                <p class="text-gray-700"><%= comment.content %></p>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="module">
        import Navbar from '../../../components/navbar.js';
        
        // Initialize navbar
        const navbar = new Navbar();
        document.getElementById('navbar-container').innerHTML = navbar.render();
        navbar.init();

        $(document).ready(function() {
            // Toggle comments section
            $('.toggle-comments').on('click', function() {
                const content = $('.comments-content');
                const icon = $(this).find('i');
                if (content.is(':visible')) {
                    content.slideUp(300);
                    icon.removeClass('fa-chevron-up').addClass('fa-chevron-down');
                } else {
                    content.slideDown(300);
                    icon.removeClass('fa-chevron-down').addClass('fa-chevron-up');
                }
            });

            // Upvote handler
            $('#upvoteBtn').on('click', function() {
                $.ajax({
                    url: '/post/<%= post._id %>/upvote',
                    method: 'POST',
                    success: function(response) {
                        $('#upvoteCount').text(response.upvotes);
                        $('#downvoteCount').text(response.downvotes);
                    },
                    error: function(xhr) {
                        alert(xhr.responseJSON?.message || 'An error occurred while upvoting.');
                    }
                });
            });

            // Downvote handler
            $('#downvoteBtn').on('click', function() {
                $.ajax({
                    url: '/post/<%= post._id %>/downvote',
                    method: 'POST',
                    success: function(response) {
                        $('#upvoteCount').text(response.upvotes);
                        $('#downvoteCount').text(response.downvotes);
                    },
                    error: function(xhr) {
                        alert(xhr.responseJSON?.message || 'An error occurred while downvoting.');
                    }
                });
            });

            // Comment form submission
            $('#commentForm').on('submit', function(e) {
                e.preventDefault();
                const content = $(this).find('textarea').val().trim();
                
                if (!content) {
                    return;
                }

                $.ajax({
                    url: $(this).attr('action'),
                    method: 'POST',
                    data: { content: content },
                    success: function(response) {
                        location.reload();
                    },
                    error: function(xhr) {
                        alert(xhr.responseJSON?.message || 'An error occurred while posting your comment.');
                    }
                });
            });
        });
    </script>
</body>
</html> 