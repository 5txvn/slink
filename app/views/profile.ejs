<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slink | Profile</title>
    <link rel="icon" href="/images/slink-logo.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        html, body {
            overflow: scroll;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            display: none;
        }
        .dot-pattern {
            background-image: radial-gradient(rgba(96, 34, 52, 0.5) 1px, transparent 1px), radial-gradient(rgba(0, 0, 0, 0.5) 1px, transparent 1px);
            background-size: 20px 20px;
            background-position: 0 0, 10px 10px;
            background-color: #ffffff;
        }
        .gradient-text {
            background: linear-gradient(45deg, #602234, #602234);
            background-size: 200% 200%;
            animation: gradient-flow 3s ease-in-out infinite;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            line-height: 1.2;
        }
        @keyframes gradient-flow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .modern-card {
            background: #fff;
            border-radius: 1.25rem;
            box-shadow: 0 4px 24px 0 rgba(60,0,0,0.08), 0 1.5px 8px #e0e0e0;
            transition: box-shadow 0.2s;
        }
        .modern-card:hover {
            box-shadow: 0 8px 32px 0 rgba(60,0,0,0.13), 0 2.5px 12px #e0e0e0;
        }
        .modern-input {
            background: #f7f7fa;
            border-radius: 0.75rem;
            border: 2px solid #e5e7eb;
            box-shadow: 0 1.5px 6px #ececec;
            transition: border 0.2s, box-shadow 0.2s;
        }
        .modern-input:focus {
            border: 2px solid #602234;
            box-shadow: 0 2px 12px #e0e0e0;
        }
        .input-icon {
            top: 50% !important;
            transform: translateY(-50%) !important;
        }
        .neumorphic-btn {
            background: #f7f7f7;
            border-radius: 1rem;
            box-shadow: 4px 4px 12px #d1d1d1, -4px -4px 12px #ffffff, inset 0 6px 16px #e0e0e0, inset 6px 0 16px #f7f7f7;
            border: none;
            transition: transform 0.4s cubic-bezier(.4,0,.2,1), box-shadow 0.2s;
            width: 100%;
            margin-left: 2.5vw;
            margin-right: 2.5vw;
            padding-top: 1.2rem;
            padding-bottom: 1.2rem;
        }
        .neumorphic-btn:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 8px 8px 24px #d1d1d1, -8px -8px 24px #ffffff, inset 0 8px 24px #e0e0e0, inset 8px 0 24px #f7f7f7;
        }
        .pulse-text {
            animation: pulse 1.8s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        .error-toast {
            position: fixed;
            top: 1rem;
            left: 50%;
            transform: translateX(-50%);
            padding: 1rem;
            border-radius: 0.5rem;
            background: #602234;
            color: white;
            display: none;
            z-index: 50;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: all 0.3s ease;
            animation: slideDown 0.3s ease-out;
        }
        @keyframes slideDown {
            from { transform: translate(-50%, -100%); }
            to { transform: translate(-50%, 0); }
        }
        .error-toast:hover {
            transform: translateX(-50%) scale(1.02);
            background: #4a1a28;
        }
        .autocomplete-dropdown {
            display: none;
        }
    </style>
</head>
<body class="min-h-screen flex flex-col dot-pattern">
    <div id="navbar-container"></div>
    <div id="notification" class="notification"></div>

    <main class="container w-[90vw] mx-auto py-8 mt-16">
        <div class="w-full">
            <form id="profile-form" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Edit Profile Card -->
                    <div class="modern-card p-6 flex flex-col items-center justify-center min-h-[180px]">
                        <h1 class="text-3xl md:text-5xl font-extrabold gradient-text mb-3">Edit Profile</h1>
                        <p class="text-lg md:text-2xl mt-8 text-black text-center font-medium">Update your profile information and add details here to help others connect with you!</p>
                    </div>

                    <!-- Basic Information -->
                    <div class="modern-card p-6">
                        <h2 class="text-xl font-bold text-[#602234] mb-4 flex items-center gap-2">
                            <i class="fas fa-user-circle"></i>
                            Basic Information
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                                <div class="relative">
                                    <i class="fas fa-user absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="name" class="modern-input w-full pl-10 pr-4 py-3 text-lg" required>
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="name-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
                                <div class="relative">
                                    <i class="fas fa-pen absolute left-3 input-icon text-gray-400"></i>
                                    <textarea name="bio" class="modern-input w-full pl-10 pr-4 py-3 text-lg h-32" placeholder="Tell us about yourself..."></textarea>
                                    <span class="absolute right-3 top-8 w-3 h-3 rounded-full" id="bio-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Education -->
                    <div class="modern-card p-6">
                        <h2 class="text-xl font-bold text-[#602234] mb-4 flex items-center gap-2">
                            <i class="fas fa-graduation-cap"></i>
                            Education
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">School</label>
                                <div class="relative">
                                    <i class="fas fa-school absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="school" class="modern-input w-full pl-10 pr-4 py-3 text-lg">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="school-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Major</label>
                                <div class="relative">
                                    <i class="fas fa-book absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="major" class="modern-input w-full pl-10 pr-4 py-3 text-lg">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="major-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Graduation Year</label>
                                <div class="relative">
                                    <i class="fas fa-calendar absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="graduationYear" class="modern-input w-full pl-10 pr-4 py-3 text-lg">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="graduationYear-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Professional Information -->
                    <div class="modern-card p-6">
                        <h2 class="text-xl font-bold text-[#602234] mb-4 flex items-center gap-2">
                            <i class="fas fa-briefcase"></i>
                            Professional Information
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Current Position</label>
                                <div class="relative">
                                    <i class="fas fa-id-badge absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="currentPosition" class="modern-input w-full pl-10 pr-4 py-3 text-lg">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="currentPosition-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Company</label>
                                <div class="relative">
                                    <i class="fas fa-building absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="company" class="modern-input w-full pl-10 pr-4 py-3 text-lg">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="company-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                                <div class="relative">
                                    <i class="fas fa-map-marker-alt absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="location" class="modern-input w-full pl-10 pr-4 py-3 text-lg">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="location-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="modern-card p-6">
                        <h2 class="text-xl font-bold text-[#602234] mb-4 flex items-center gap-2">
                            <i class="fas fa-share-alt"></i>
                            Social Links
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">LinkedIn</label>
                                <div class="relative">
                                    <i class="fab fa-linkedin absolute left-3 input-icon text-gray-400"></i>
                                    <input type="url" name="linkedin" class="modern-input w-full pl-10 pr-4 py-3 text-lg" placeholder="https://linkedin.com/in/...">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="linkedin-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Twitter</label>
                                <div class="relative">
                                    <i class="fab fa-twitter absolute left-3 input-icon text-gray-400"></i>
                                    <input type="url" name="twitter" class="modern-input w-full pl-10 pr-4 py-3 text-lg" placeholder="https://twitter.com/...">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="twitter-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Instagram</label>
                                <div class="relative">
                                    <i class="fab fa-instagram absolute left-3 input-icon text-gray-400"></i>
                                    <input type="url" name="instagram" class="modern-input w-full pl-10 pr-4 py-3 text-lg" placeholder="https://instagram.com/...">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="instagram-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- More Social Links -->
                    <div class="modern-card p-6">
                        <h2 class="text-xl font-bold text-[#602234] mb-4 flex items-center gap-2">
                            <i class="fas fa-link"></i>
                            More Social Links
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Reddit</label>
                                <div class="relative">
                                    <i class="fab fa-reddit absolute left-3 input-icon text-gray-400"></i>
                                    <input type="url" name="reddit" class="modern-input w-full pl-10 pr-4 py-3 text-lg" placeholder="https://reddit.com/u/...">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="reddit-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Discord</label>
                                <div class="relative">
                                    <i class="fab fa-discord absolute left-3 input-icon text-gray-400"></i>
                                    <input type="text" name="discord" class="modern-input w-full pl-10 pr-4 py-3 text-lg" placeholder="username#0000">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="discord-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Personal Website</label>
                                <div class="relative">
                                    <i class="fas fa-globe absolute left-3 input-icon text-gray-400"></i>
                                    <input type="url" name="website" class="modern-input w-full pl-10 pr-4 py-3 text-lg" placeholder="https://...">
                                    <span class="absolute right-3 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full" id="website-valid" style="background:#10B981;"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="flex justify-center mt-8">
                    <button type="submit" class="neumorphic-btn flex items-center justify-center text-[#602234] text-lg md:text-xl font-bold pulse-text transition-transform duration-200">
                        <i class="fas fa-save mr-2"></i>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </main>

    <!-- Error Toast -->
    <div id="errorToast" class="error-toast w-11/12 sm:w-3/4 md:w-2/3 lg:w-1/2">
        <div class="flex items-center justify-center">
            <i class="fas fa-exclamation-circle mr-2 text-xl"></i>
            <span id="errorMessage" class="text-lg font-semibold"></span>
        </div>
    </div>

    <script type="module">
        import Navbar from './navbar.js';

        // Initialize navbar
        const navbar = new Navbar();
        document.getElementById('navbar-container').innerHTML = navbar.render();
        navbar.init();

        // Get user data from server
        const userData = JSON.parse('<%- user %>');

        // Show notification
        function showNotification(message, type = 'success') {
            const notification = $('#errorToast');
            notification.find('i').removeClass('fa-exclamation-circle fa-check-circle').addClass(type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle');
            notification.find('#errorMessage').text(message);
            notification.fadeIn().delay(3000).fadeOut();
        }

        // Populate form with user data
        function populateForm() {
            const form = $('#profile-form');
            for (const [key, value] of Object.entries(userData)) {
                if (key === 'socialLinks') {
                    for (const [socialKey, socialValue] of Object.entries(value)) {
                        const input = form.find(`[name="${socialKey}"]`);
                        if (input.length) {
                            input.val(socialValue === 'n/a' ? '' : socialValue);
                        }
                    }
                } else {
                    const input = form.find(`[name="${key}"]`);
                    if (input.length) {
                        if (input.attr('type') === 'checkbox') {
                            input.prop('checked', value);
                        } else {
                            input.val(value || '');
                        }
                    }
                }
            }
        }

        // Handle form submission
        $('#profile-form').on('submit', async function(e) {
            e.preventDefault();
            
            const formData = {};
            $(this).serializeArray().forEach(item => {
                formData[item.name] = item.value;
            });

            try {
                const response = await fetch('/profile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    showNotification('Profile updated successfully!', 'success');
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                showNotification(error.message, 'error');
            }
        });

        // Initialize form
        $(document).ready(function() {
            populateForm();

            // Fetch autocomplete data
            fetch('/info.json')
                .then(response => response.json())
                .then(data => {
                    // Initialize autocomplete for universities
                    initializeAutocomplete('school', data.universities);
                    // Initialize autocomplete for majors
                    initializeAutocomplete('major', data.majors);
                    // Initialize autocomplete for positions
                    initializeAutocomplete('currentPosition', data.positions);
                })
                .catch(error => console.error('Error loading autocomplete data:', error));
        });

        // Initialize autocomplete functionality
        function initializeAutocomplete(inputName, options) {
            const input = $(`input[name="${inputName}"]`);
            const dropdown = $('<div class="autocomplete-dropdown absolute w-full bg-white border border-gray-300 rounded-lg mt-1 shadow-lg z-50 max-h-60 overflow-y-auto"></div>');
            
            input.after(dropdown);
            
            input.on('input', function() {
                const value = $(this).val().toLowerCase();
                const matches = options.filter(option => 
                    option.toLowerCase().includes(value)
                ).slice(0, 10);
                
                dropdown.empty();
                
                if (matches.length > 0 && value.length > 0) {
                    matches.forEach(match => {
                        const item = $('<div class="p-2 hover:bg-gray-100 cursor-pointer"></div>')
                            .text(match)
                            .on('click', function() {
                                input.val(match);
                                dropdown.hide();
                            });
                        dropdown.append(item);
                    });
                    dropdown.show();
                } else {
                    dropdown.hide();
                }
            });
            
            // Hide dropdown when clicking outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest(`input[name="${inputName}"], .autocomplete-dropdown`).length) {
                    dropdown.hide();
                }
            });
        }
    </script>
    <script>
        // Input validation functions (jQuery)
        function validateInput(name, value) {
            if (name === 'graduationYear') return value >= 1900;
            if (name === 'linkedin' || name === 'github' || name === 'website') return value === '' || value.startsWith('https://') || value.startsWith('http://');
            if (name === 'email') return /^[^@\s]+@[^@\s]+\.[^@\s]+$/.test(value);
            return value.trim().length > 0;
        }
        function updateValidationDot(name, valid) {
            const dot = $('#' + name + '-valid');
            if (!dot.length) return;
            dot.css('background', valid ? '#10B981' : '#EF4444');
        }
        $(function() {
            $('#profile-form input, #profile-form textarea').on('input', function() {
                updateValidationDot(this.name, validateInput(this.name, $(this).val()));
            });
            // Subtle save button hover
            $('.neumorphic-btn').hover(
                function() { $(this).css('transform', 'translateY(-3px) scale(1.015)'); },
                function() { $(this).css('transform', 'none'); }
            );
        });
    </script>
</body>
</html> 