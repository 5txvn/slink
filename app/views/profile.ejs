<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Alumni Network</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .gradient-text {
            background: linear-gradient(45deg, #800000, #cc0000);
            background-size: 200% 200%;
            animation: gradient-flow 3s ease-in-out infinite;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        @keyframes gradient-flow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .notification {
            position: fixed;
            top: 80px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            width: 90%;
            max-width: 500px;
            padding: 1rem;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            display: none;
        }
        .notification.success {
            background-color: #10B981;
            color: white;
        }
        .notification.error {
            background-color: #EF4444;
            color: white;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">
    <div id="navbar-container"></div>
    <div id="notification" class="notification"></div>

    <main class="container mx-auto px-4 py-8 mt-16">
        <div class="max-w-7xl mx-auto">
            <h1 class="text-4xl font-bold gradient-text mb-8 text-center">Edit Profile</h1>

            <form id="profile-form" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <!-- Basic Information -->
                    <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-200">
                        <h2 class="text-xl font-bold text-[#800000] mb-4 flex items-center gap-2">
                            <i class="fas fa-user"></i>
                            Basic Information
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                                <div class="relative">
                                    <i class="fas fa-user absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="name" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200" required>
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
                                <div class="relative">
                                    <i class="fas fa-pen absolute left-3 top-4 text-gray-400"></i>
                                    <textarea name="bio" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200 h-32" placeholder="Tell us about yourself..."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Education -->
                    <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-200">
                        <h2 class="text-xl font-bold text-[#800000] mb-4 flex items-center gap-2">
                            <i class="fas fa-graduation-cap"></i>
                            Education
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">School</label>
                                <div class="relative">
                                    <i class="fas fa-school absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="school" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Major</label>
                                <div class="relative">
                                    <i class="fas fa-book absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="major" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Graduation Year</label>
                                <div class="relative">
                                    <i class="fas fa-calendar absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="number" name="graduationYear" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Professional Information -->
                    <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-200">
                        <h2 class="text-xl font-bold text-[#800000] mb-4 flex items-center gap-2">
                            <i class="fas fa-briefcase"></i>
                            Professional Information
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Current Position</label>
                                <div class="relative">
                                    <i class="fas fa-id-badge absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="currentPosition" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Company</label>
                                <div class="relative">
                                    <i class="fas fa-building absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="company" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                                <div class="relative">
                                    <i class="fas fa-map-marker-alt absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="location" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Social Links -->
                    <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-200">
                        <h2 class="text-xl font-bold text-[#800000] mb-4 flex items-center gap-2">
                            <i class="fas fa-link"></i>
                            Social Links
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">LinkedIn</label>
                                <div class="relative">
                                    <i class="fab fa-linkedin absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="url" name="linkedin" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200" placeholder="https://linkedin.com/in/...">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">GitHub</label>
                                <div class="relative">
                                    <i class="fab fa-github absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="url" name="github" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200" placeholder="https://github.com/...">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Personal Website</label>
                                <div class="relative">
                                    <i class="fas fa-globe absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="url" name="website" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200" placeholder="https://...">
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Skills & Interests -->
                    <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-200">
                        <h2 class="text-xl font-bold text-[#800000] mb-4 flex items-center gap-2">
                            <i class="fas fa-star"></i>
                            Skills & Interests
                        </h2>
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Skills</label>
                                <div class="relative">
                                    <i class="fas fa-tools absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="skills" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200" placeholder="e.g., JavaScript, Python, Design">
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Interests</label>
                                <div class="relative">
                                    <i class="fas fa-heart absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                    <input type="text" name="interests" class="w-full pl-10 pr-4 py-3 text-lg rounded-lg border-2 border-gray-200 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 transition-colors duration-200" placeholder="e.g., AI, Web Development, Photography">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <div class="flex justify-center mt-8">
                    <button type="submit" class="inline-flex items-center px-8 py-4 bg-[#800000] text-white text-lg font-bold rounded-lg hover:bg-[#600000] transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200">
                        <i class="fas fa-save mr-2"></i>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </main>

    <script type="module">
        import Navbar from './navbar.js';

        // Initialize navbar
        const navbar = new Navbar();
        document.getElementById('navbar-container').innerHTML = navbar.render();
        navbar.init();

        // Get user data from server
        const userData = JSON.parse('<%- user %>');

        // Show notification
        function showNotification(message, type = 'success') {
            const notification = $('#notification');
            notification.removeClass('success error').addClass(type);
            notification.html(`
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>
                        <span>${message}</span>
                    </div>
                    <button class="text-white hover:text-gray-200" onclick="$(this).parent().parent().fadeOut()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `);
            notification.fadeIn();
            setTimeout(() => notification.fadeOut(), 5000);
        }

        // Populate form with user data
        function populateForm() {
            const form = $('#profile-form');
            for (const [key, value] of Object.entries(userData)) {
                const input = form.find(`[name="${key}"]`);
                if (input.length) {
                    if (input.attr('type') === 'checkbox') {
                        input.prop('checked', value);
                    } else {
                        input.val(value || '');
                    }
                }
            }
        }

        // Handle form submission
        $('#profile-form').on('submit', async function(e) {
            e.preventDefault();
            
            const formData = {};
            $(this).serializeArray().forEach(item => {
                formData[item.name] = item.value;
            });

            try {
                const response = await fetch('/profile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    showNotification('Profile updated successfully!', 'success');
                    setTimeout(() => window.location.reload(), 1500);
                } else {
                    throw new Error(result.message);
                }
            } catch (error) {
                showNotification(error.message, 'error');
            }
        });

        // Initialize form
        $(document).ready(function() {
            populateForm();
        });
    </script>
</body>
</html> 