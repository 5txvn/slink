    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8 mt-20">
        <div class="max-w-4xl mx-auto">
            <div class="bg-white rounded-xl p-6 shadow-lg">
                <div class="flex items-center mb-6">
                    <i class="fas fa-pen-fancy text-3xl text-[#800000] mr-3"></i>
                    <h1 class="text-2xl sm:text-3xl font-bold gradient-text">Create New Post</h1>
                </div>

                <form id="createPostForm" action="/create-post" method="POST" class="space-y-6">
                    <div>
                        <label for="content" class="block text-sm font-medium text-gray-700 mb-2">Post Content</label>
                        <div class="editor-toolbar">
                            <button type="button" data-format="bold" title="Bold"><i class="fas fa-bold"></i></button>
                            <button type="button" data-format="italic" title="Italic"><i class="fas fa-italic"></i></button>
                            <button type="button" data-format="heading" title="Heading"><i class="fas fa-heading"></i></button>
                            <button type="button" data-format="link" title="Link"><i class="fas fa-link"></i></button>
                            <button type="button" data-format="code" title="Code"><i class="fas fa-code"></i></button>
                            <button type="button" data-format="list" title="List"><i class="fas fa-list"></i></button>
                            <button type="button" data-format="quote" title="Quote"><i class="fas fa-quote-right"></i></button>
                            <button type="button" id="previewBtn" title="Preview"><i class="fas fa-eye"></i></button>
                        </div>
                        <div id="editorContent" class="editor-content" contenteditable="true"></div>
                        <div id="editorPreview" class="editor-preview"></div>
                        <input type="hidden" name="content" id="contentInput">
                    </div>

                    <div>
                        <label for="tags" class="block text-sm font-medium text-gray-700 mb-2">Tags (comma-separated)</label>
                        <input type="text" id="tags" name="tags" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:border-[#800000] focus:ring-2 focus:ring-[#800000]/20 focus:bg-gray-50 transition-all duration-300" placeholder="e.g., physics, quantum, research">
                        <div id="tagContainer" class="flex flex-wrap mt-2"></div>
                    </div>

                    <!-- Posting Guidelines -->
                    <div class="bg-gray-50 rounded-lg p-4 space-y-2">
                        <h3 class="font-semibold text-gray-800">📝 Posting Guidelines</h3>
                        <ul class="text-sm text-gray-600 space-y-1">
                            <li>✨ Be clear and concise in your post</li>
                            <li>🔍 Use relevant tags to help others find your post</li>
                            <li>🤝 Be respectful and constructive in discussions</li>
                            <li>📚 Cite sources when sharing information</li>
                            <li>🎯 Keep posts focused on a single topic</li>
                        </ul>
                    </div>

                    <button type="submit" class="w-full bg-[#800000] text-white py-3 px-6 rounded-lg text-lg font-bold transition-all duration-300 transform hover:scale-[1.02] shadow-[inset_6px_6px_12px_rgba(0,0,0,0.3)]">
                        Create Post
