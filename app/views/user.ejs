<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slink | View User</title>
    <link rel="icon" href="/images/slink-logo.png" type="image/x-icon">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .profile-card {
            background: #fff;
            border-radius: 1.5rem;
            box-shadow: 0 8px 32px rgba(60,0,0,0.10), 0 1.5px 8px #e0e0e0;
            padding: 2.5rem 2rem 2rem 2rem;
            max-width: 900px;
            margin: 3.5rem auto 2rem auto;
            display: flex;
            flex-direction: row;
            gap: 2.5rem;
            position: relative;
        }
        .profile-avatar {
            width: 140px;
            height: 140px;
            border-radius: 1.25rem;
            object-fit: cover;
            box-shadow: 0 2px 12px #d1d1d1;
            border: 4px solid #fff;
            margin-bottom: 1.5rem;
            background: var(--avatar-bg, #800000);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: #fff;
        }
        .main-info {
            flex: 1 1 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 0.7rem;
        }
        .main-info .name {
            font-size: 2.2rem;
            font-weight: 800;
            color: #222;
            line-height: 1.1;
        }
        .main-info .username {
            font-size: 1.2rem;
            color: #800000;
            font-weight: 600;
            margin-bottom: 0.2rem;
        }
        .main-info .position {
            font-size: 1.1rem;
            color: #444;
            font-weight: 500;
        }
        .info-section {
            margin-top: 1.5rem;
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
        }
        .info-card {
            background: #f7f7fa;
            border-radius: 1rem;
            box-shadow: 0 2px 8px #ececec;
            padding: 1.2rem 1.5rem 1.1rem 1.5rem;
            min-width: 220px;
            flex: 1 1 260px;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
        .info-title {
            font-size: 1.08rem;
            font-weight: 700;
            color: #800000;
            margin-bottom: 0.3rem;
        }
        .info-content {
            font-size: 1rem;
            color: #333;
            display: flex;
            flex-direction: column;
            gap: 0.2rem;
        }
        @media (max-width: 900px) {
            .profile-card { flex-direction: column; align-items: center; gap: 1.5rem; padding: 1.5rem 0.5rem; }
            .main-info { align-items: center; text-align: center; }
            .info-section { flex-direction: column; gap: 1rem; }
        }
    </style>
    <script>
        // Set random avatar background
        document.addEventListener('DOMContentLoaded', function() {
            const colors = ['#800000', '#222', '#444'];
            const bg = colors[Math.floor(Math.random() * colors.length)];
            document.documentElement.style.setProperty('--avatar-bg', bg);
        });
    </script>
</head>
<body class="bg-gray-100 min-h-screen">
    <div id="navbar-container"></div>
    <main class="container mx-auto px-4 py-8 mt-16">
        <div class="profile-card">
            <div class="profile-avatar">
                <i class="fas fa-user"></i>
            </div>
            <div class="main-info">
                <div class="name"><%= user.name %></div>
                <div class="username">@<%= user.username %></div>
                <div class="position"><%= user.position %></div>
            </div>
        </div>
        <div class="profile-card info-section">
            <div class="info-card">
                <div class="info-title">Education</div>
                <div class="info-content">
                    <span><%= user.school %></span>
                    <span><%= user.major %></span>
                    <span>Class of <%= user.graduationYear %></span>
                </div>
            </div>
            <div class="info-card">
                <div class="info-title">Contact</div>
                <div class="info-content">
                    <span><i class="fas fa-envelope mr-2"></i><%= user.email %></span>
                    <span><i class="fas fa-map-marker-alt mr-2"></i><%= user.location %></span>
                </div>
            </div>
            <div class="info-card">
                <div class="info-title">About</div>
                <div class="info-content">
                    <span><%= user.bio %></span>
                </div>
            </div>
            <div class="info-card">
                <div class="info-title">Links</div>
                <div class="info-content">
                    <% if (user.linkedin) { %><span><i class="fab fa-linkedin mr-2"></i><a href="<%= user.linkedin %>" target="_blank" class="underline text-[#800000]">LinkedIn</a></span><% } %>
                    <% if (user.github) { %><span><i class="fab fa-github mr-2"></i><a href="<%= user.github %>" target="_blank" class="underline text-[#800000]">GitHub</a></span><% } %>
                    <% if (user.website) { %><span><i class="fas fa-globe mr-2"></i><a href="<%= user.website %>" target="_blank" class="underline text-[#800000]">Website</a></span><% } %>
                </div>
            </div>
        </div>
    </main>
    <script type="module">
        import Navbar from './navbar.js';
        const navbar = new Navbar();
        document.getElementById('navbar-container').innerHTML = navbar.render();
        navbar.init();
    </script>
</body>
</html> 