                <i class="fas fa-envelope"></i> Contact
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1 flex flex-col items-center px-4 relative z-10 mt-0 md:mt-24">
        <!-- Hero Section -->
        <div class="w-full max-w-[92vw] flex flex-row items-center justify-between gap-12 mb-16">
